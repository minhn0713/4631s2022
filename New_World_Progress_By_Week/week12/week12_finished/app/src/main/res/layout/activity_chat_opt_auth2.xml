<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_shade_1"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/sub_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="22dp"
        android:paddingTop="20dp"
        android:paddingBottom="30dp"
        android:fontFamily="@font/ubunto_title"
        android:text="News World Connect"
        android:textColor="@color/yellow"
        android:textSize="45sp"
        android:textStyle="bold"></TextView>

    <TextView
        android:id="@+id/textheading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sub_title"
        android:padding="30dp"
        android:fontFamily="@font/ubuntu_subtitle"
        android:text="Enter Codes Which You Received"
        android:textAlignment="center"
        android:textColor="@color/yellow"
        android:textSize="20sp"
        android:textStyle="italic"></TextView>

    <EditText
        android:id="@+id/getotp"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@id/textheading"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:background="@color/grey"
        android:hint="Enter the OTP here"
        android:fontFamily="@font/raleway"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/changenumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/getotp"
        android:layout_centerHorizontal="true"
        android:paddingTop="5dp"
        android:fontFamily="@font/ubuntu_subtitle"
        android:text="Didn't Receive? Change Your Number"
        android:textColor="@color/yellow"
        android:textSize="18sp"
        android:textStyle="italic" />

    <android.widget.Button
        android:id="@+id/verifyotp"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_below="@+id/changenumber"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="#25d366"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:text="Verify Code"
        android:fontFamily="@font/ubunto_title"
        android:textColor="@color/white"
        tools:ignore="TextContrastCheck" />


    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/verifyotp"
        android:visibility="invisible"
        android:id="@+id/progressbarOfotpAuth"
        android:layout_marginTop="20dp"
        android:outlineSpotShadowColor="@color/yellow"
        android:outlineAmbientShadowColor="@color/yellow"
        ></ProgressBar>


</RelativeLayout>